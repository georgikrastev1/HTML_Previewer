@page
@model HTMLPreviewWeb.Pages.HTML_Editor.IndexModel

@{
    ViewData["Title"] = "Submitted HTML Samples";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HTMLContent[0].Description)
            </th>
            <th>Actions</th>
            <th>
                @Html.DisplayNameFor(model => model.HTMLContent[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HTMLContent[0].CreateDate)
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HTMLContent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">View / Share link</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                <form>
                    <p>

                        <input value="@item.Content" valuetype="text" asp-for="SearchString" type="hidden" />
                        <input type="submit" value="Duplicates Check" title='If one line remains after execution: no duplicates' class="btn btn-info" />
                    </p>
                </form>
            </td>
            <td>
                <form>
                    <p>
                        <input value="" valuetype="text" asp-for="SearchString" type="hidden" />
                        <input type="submit" value="Clear Check" class="btn btn-info" />
                    </p>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
